<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="ContentDescription"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/purple">
 <ImageView
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_gravity="center"
     android:src="@drawable/options"
     android:layout_marginTop="@dimen/imagesTOPscreenOption"
     />


    <ImageView
      android:background="@drawable/lang"
      android:layout_marginTop="@dimen/OptionsALLtop"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      />

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="@dimen/OptionsALLtop"
       >

       <ImageButton
           android:id="@+id/germanyButton"
           android:layout_width="90dp"
           android:layout_height="70dp"
           android:layout_centerInParent="true"
           android:background="@drawable/germany"

           />


    <ImageButton
        android:id="@+id/greeceButton"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/greece"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/germanyButton"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@id/germanyButton" />

       <ImageButton
           android:id="@+id/englandButton"
           android:layout_width="match_parent"
           android:layout_height="70dp"
           android:background="@drawable/england"
           android:layout_toLeftOf="@+id/germanyButton"
           android:layout_alignParentLeft="true"
           android:layout_marginRight="40dp"
           android:layout_marginLeft="40dp"
           android:layout_toStartOf="@+id/germanyButton"
           android:layout_alignParentStart="true" />




   </RelativeLayout>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/soundoptions"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/OptionsALLtop"
        />


    <RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    >


        <ImageView
            android:layout_alignParentTop="true"
            android:id="@+id/soundtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_centerVertical="true"
            android:src="@drawable/sound"
            android:layout_marginStart="30dp" />

        <ToggleButton
            android:id="@+id/sound"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_alignLeft="@+id/soundtitle"
            android:layout_alignStart="@+id/soundtitle"
            android:layout_below="@+id/soundtitle"
            android:layout_marginTop="@dimen/buttonsup"
            android:background="@drawable/on"
            android:textOn=""
            android:textOff=""
            android:layout_marginStart="20dp" />

    <ImageView
        android:src="@drawable/music"
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/musictext"
        android:layout_centerVertical="true"
        android:layout_marginRight="30dp"
        android:layout_alignParentRight="true"
        android:textSize="@dimen/textSizes"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp" />
    <ToggleButton
        android:id="@+id/music"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/on"
        android:layout_alignRight="@id/musictext"
        android:layout_alignEnd="@id/musictext"
        android:layout_marginRight="20dp"
        android:layout_below="@id/musictext"
        android:layout_marginTop="@dimen/buttonsup"
        android:textOff=""
        android:textOn=""
        android:layout_marginEnd="20dp" />

    </RelativeLayout>

</LinearLayout>