<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/blueDark"
    android:orientation="vertical"
    android:padding="15dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/imagesTOPscreenOption"
        android:layout_marginBottom="@dimen/imagesTOPscreenOption"
        android:fontFamily="@font/unlock"
        android:text="well done!!"
        android:textColor="@color/ColorFonts"
        android:textSize="40sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#bdbdbd" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginButton"
        android:fontFamily="@font/unlock"
        android:text="Congratulations on finishing the puzzle! Let\'s see your score?"
        android:textColor="@color/ColorFonts"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/marginButton"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ok"
                android:text="Okay"
                android:textSize="18sp"
                android:fontFamily="@font/unlock"
                android:background="@drawable/greenbutton"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/restart"
                android:text="@string/restart"
                android:textSize="18sp"
                android:fontFamily="@font/unlock"
                android:background="@drawable/redbutton"
                />


        </LinearLayout>





    </LinearLayout>
</LinearLayout>