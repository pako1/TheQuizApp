<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/purple"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.android.thequizapp.PuzzleActivity"
    tools:ignore="ContentDescription"
    tools:showIn="@layout/activity_puzzle">

    <RelativeLayout
        android:id="@+id/flag_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/circlebackground"
            android:fontFamily="@font/unlock"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/ColorFonts"
            android:textSize="30sp" />


        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:src="@drawable/quiz" />

        <TextView
            android:id="@+id/puzzle_score300"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/circlebackground"
            android:fontFamily="@font/unlock"
            android:gravity="center"
            android:text="@string/points_300"
            android:textColor="@color/ColorFonts"
            android:textSize="30sp" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/box"
        android:layout_width="310dp"
        android:layout_height="310dp"
        android:layout_below="@+id/flag_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp">

        <com.example.android.thequizapp.CustomSquareLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/frame"
            android:layout_width="310dp"
            android:layout_height="310dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:background="#eee">

            <ImageButton
                android:id="@+id/zero"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:background="@null"
                android:onClick="ButtonOnClick"
                android:scaleType="fitCenter" />

            <ImageButton
                android:id="@+id/one"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="105dp"
                android:layout_marginTop="0dp"
                android:background="@null"
                android:onClick="ButtonOnClick"
                android:scaleType="fitCenter" />

            <ImageButton
                android:id="@+id/two"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="210dp"
                android:layout_marginTop="0dp"
                android:background="@null"
                android:onClick="ButtonOnClick"
                android:scaleType="fitCenter" />

            <ImageButton
                android:id="@+id/three"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="105dp"
                android:background="@null"
                android:onClick="ButtonOnClick"
                android:scaleType="fitCenter" />

            <ImageButton
                android:id="@+id/four"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="105dp"
                android:layout_marginTop="105dp"
                android:background="@null"
                android:onClick="ButtonOnClick"
                android:scaleType="fitCenter" />

            <ImageButton
                android:id="@+id/five"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="210dp"
                android:layout_marginTop="105dp"
                android:background="@null"
                android:onClick="ButtonOnClick"
                android:scaleType="fitCenter" />

            <ImageButton
                android:id="@+id/six"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="210dp"
                android:background="@null"
                android:onClick="ButtonOnClick"
                android:scaleType="fitCenter" />

            <ImageButton
                android:id="@+id/seven"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="105dp"
                android:layout_marginTop="210dp"
                android:background="@null"
                android:onClick="ButtonOnClick"
                android:scaleType="fitCenter" />

            <ImageButton
                android:id="@+id/eight"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="210dp"
                android:layout_marginTop="210dp"
                android:background="@null"
                android:onClick="ButtonOnClick"
                android:scaleType="fitCenter" />

        </com.example.android.thequizapp.CustomSquareLayout>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/box">

        <TextView
            android:id="@+id/skipPuzzle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/unlock"
            android:text="@string/puzzle_skip"
            android:textAllCaps="true"
            android:textColor="@color/ColorFonts"
            android:textSize="22sp" />

        <Button
            android:id="@+id/unsolve"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/purplebutton"
            android:fontFamily="@font/unlock"
            android:text="Unsolvable?"
            android:textColor="@color/ColorFonts"
            android:textSize="22sp" />


        <ImageButton
            android:id="@+id/Puzzlehome"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:background="@drawable/home" />

    </RelativeLayout>

</RelativeLayout>